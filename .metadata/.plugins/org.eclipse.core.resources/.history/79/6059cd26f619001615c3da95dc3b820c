	private static void eventMenu() {
		showEventsOptions();
		
	}
	
	private static void showEventsOptions() {
		int i = 1;
		
		for (TransactionEvents transactionsEvents : TransactionEvents.values()) {
			System.out.println(i + " - " + transactionsEvents.eventTitle);
			i++;
		}
	}
}